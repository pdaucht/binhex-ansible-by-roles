#odoo server
upstream {{ company }} {
  server {{ instanceIp }}:8069;
}
upstream {{ company }}chat {
  server {{ instanceIp }}:8072;
}

# http -> https
server {
  listen 80;
  server_name {{ company }}.{{ domain }};
  rewrite ^(.*) https://$host$1 permanent;
}

server {
  listen 443 ssl;
  server_name {{ company }}.{{ domain }};
  proxy_read_timeout 720s;
  proxy_connect_timeout 720s;
  proxy_send_timeout 720s;

  # Add Headers for odoo proxy mode
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;
  proxy_set_header X-Real-IP $remote_addr;

  # SSL parameters
  
  ssl_certificate /admin/binhex.nginx2020.crt; # managed by Certbot
  ssl_certificate_key /admin/binhex.private2020.crt; # managed by Certbot
  
  ssl_session_timeout 30m;
  ssl_protocols TLSv1.2;
  ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
  ssl_prefer_server_ciphers off;

  # log
  access_log /var/log/nginx/{{ company }}.access.log;
  error_log /var/log/nginx/{{ company }}.error.log;

  # Redirect longpoll requests to {{ company }} longpolling port
  location /longpolling {
    proxy_pass http://{{ company }}chat;
  }

  # Redirect requests to odoo backend server
  location / {
    proxy_redirect off;
    proxy_pass http://{{ company }};
  }
    
  error_page 404 /custom_404.html;
  location = /custom_404.html {
                root /usr/share/nginx/html;
                internal;
  }
  error_page 500 502 503 504 521 /custom_50x.html;
  location = /custom_50x.html {
                root /usr/share/nginx/html;
                internal;
  }	
  # common gzip
  gzip_types text/css text/scss text/plain text/xml application/xml application/json application/javascript;
  gzip on;
}